{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "@tests/*": ["tests/*"]
        },
        "outDir": "dist",
        "target": "ESNext",
        "module": "CommonJS",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "removeComments": true,
        "strict": true,
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules"]
}